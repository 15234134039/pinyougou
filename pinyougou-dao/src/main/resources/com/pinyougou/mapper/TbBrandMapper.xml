      distinct
    </if>
    <include refid="Base_Column_List" />
    from tb_brand
    <if test="_parameter != null" >
      <include refid="Example_Where_Clause" />
    </if>
    <if test="orderByClause != null" >
      order by ${orderByClause}
    </if>
  </select>

  <insert id="insert" parameterType="com.pinyougou.pojo.TbBrand" >
    insert into tb_brand (id, name, first_char)
    values (#{id}, #{name}, #{firstChar})
  </insert>

  <update id="updateByPrimaryKey" parameterType="com.pinyougou.pojo.TbBrand" >
    update tb_brand
    set name = #{name}, first_char = #{firstChar}
    where id = #{id}
  </update>

  <select id="selectByPrimaryKey" resultMap="BaseResultMap" parameterType="java.lang.Long" >
    select
    <include refid="Base_Column_List" />
    from tb_brand
    where id = #{id}
  </select>

  <delete id="deleteByPrimaryKey" parameterType="java.lang.Long" >
    delete from tb_brand
    where id = #{id}
  </delete>

